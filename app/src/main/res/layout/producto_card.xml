<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/per_photo"
                android:layout_width="65dp"
                android:layout_height="76dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_produto"
                />

            <TextView
                android:id="@+id/zona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/per_photo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/capacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zona"
                android:layout_toRightOf="@+id/per_photo" />

            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/capacidad"
                android:layout_toRightOf="@+id/per_photo" />

            <ImageButton
                android:id="@+id/BtnRestarProducto"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center"
                android:layout_marginEnd="71dp"
                android:src="@drawable/ic_boton_redondo_eliminar" />

            <EditText
                android:id="@+id/unidadesacomprar"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="37dp"
                android:ems="20"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"
                android:text="0" />

            <ImageButton
                android:id="@+id/btnSumarProducto"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center"
                android:src="@drawable/ic_boton_anadir_redondeado" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>